<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDark"
        tools:ignore="All">

        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/nunito"
            android:includeFontPadding="false"
            android:letterSpacing="0.02"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="140dp"
            android:text="Verificação"
            android:textColor="@color/colorLight05"
            android:textSize="20sp" />


        <RelativeLayout
            android:id="@+id/scroll_step_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layLogoMj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layerType="software"
                    android:src="@drawable/ic_icon_thunder_mj"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:fontFamily="@font/nunito"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="0dp"
                    android:text="manda job"
                    android:textColor="@color/colorLight05"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_image_step_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:minHeight="0dp">

                <ImageView
                    android:id="@+id/image_step_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/desc_step_image"
                    android:gravity="center"
                    android:layerType="software"
                    android:src="@null"
                    android:visibility="gone" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/layout_arrow_next_two"
                android:layout_below="@id/layLogoMj"
                android:layout_marginTop="90dp">

                <LinearLayout
                    android:id="@+id/label_text_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp">

                    <TextView
                        android:id="@+id/tv_label_step_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:includeFontPadding="true"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="-6sp"
                        android:text="Para verificar seu e-mail, enviamos um código para: "
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_email_recebido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_light"
                        android:includeFontPadding="false"
                        android:textColor="@color/colorWhite"
                        android:text=""
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_input_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label_text_step"
                    android:layout_marginBottom="0dp"
                    android:orientation="vertical"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp">


                    <TextView
                        android:id="@+id/tv_alterar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/nunito_light"
                        android:includeFontPadding="false"
                        android:letterSpacing="0.04"
                        android:lineSpacingExtra="0dp"
                        android:text="(alterar)"
                        android:textColor="@color/colorSecondary"
                        android:textSize="16sp" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/email_text_input"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColorHint="@color/colorSemiDark">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_email_step_one"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="@font/nunito"
                            android:hint="G- 159806"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:letterSpacing="0.2"
                            android:paddingStart="20dp"
                            android:selectAllOnFocus="true"
                            android:textColor="@color/colorLight010"
                            android:textColorHint="@color/colorLight030" />

                        <TextView
                            android:id="@+id/tv_reenviar_codigo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/nunito_light"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:letterSpacing="0.04"
                            android:lineSpacingExtra="0dp"
                            android:text="Reenviar código"
                            android:textColor="@color/colorSecondary"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/password_text_input"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:focusable="true"
                        android:textColorHint="@color/colorSemiDark"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/colorDark070" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:layout_below="@+id/edt_email_step_one"
                        android:layout_marginTop="90dp"
                        android:backgroundTint="@android:color/transparent"
                        android:elevation="0dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:id="@+id/layout_button_sign"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_button_migrate_card"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?selectableItemBackgroundBorderless"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_semibold"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="0dp"
                                android:text="Continuar"
                                android:textColor="@color/colorWhite"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>
</layout>